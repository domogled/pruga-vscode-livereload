{
    "name": "pruga-vscode-livereload",
    "displayName": "pruga-vscode-livereload",
    "description": "simple livereloader",
    "version": "0.0.1",
    "publisher": "domogled",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Pruga configuration",
            "properties": {
                "pruga.liveServerPort": {
                    "type": "integer",
                    "default": 35729,
                    "description": "Port number for the Live Server"
                },
                "pruga.webPath": {
                    "type": "string",
                    "default": "build/dev/**/*",
                    "description": "Relative root location of the web directory"
                }
            }
        },
        "commands": [
            {
            "command": "pruga.preview",
            "title": "Preview and watch web page"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}